
<div class="container">

  <h1 class="text-center mt-8 mb-4 text-white"><%= @user.username %>'s profile</h1>

  <!-- <%= gravatar_for @user, size: 300 %> -->

  <div class="my-5">
    <h4 class="text-center text-white"><%= simple_format(@user.bio) %></h4>
  </div>

  <%= image_tag @user.avatar, class: "mx-auto d-block" %> <br /> <%# this is for viewing the avatar attachment we add i.e  single image%>

  <div class="my-5">
    <h4 class="text-center text-white"><%= @user.content %></h4>
  </div>

  <% if logged_in? && current_user == @user %>
    <div class="text-center mt-2">
      <%= link_to "Edit Profile", edit_user_path(@user), class:"btn btn-outline-info mb-3 text-center col-2" %>
    </div>
  <% end %>

  <div class="mt-4">
    <h3 class="text-center px-5 text-white">Articles</h3>

    <div class="row justify-content-md-center mt-4 mb-1 ">
      <div class="flickr_pagination col-3">
        <%= will_paginate @articles, :container => false %>
      </div>
    </div>

    <%= render 'articles/article' %>

    <div class="row justify-content-md-center mt-2 mb-1 ">
      <div class="flickr_pagination col-3">
        <%= will_paginate @articles, :container => false %>
      </div>
    </div>

  </div>

</div>

